<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "http://logging.apache.org/log4j/1.2/apidocs/org/apache/log4j/xml/doc-files/log4j.dtd">
<log4j:configuration xmlns:log4j='http://jakarta.apache.org/log4j/'>

	<!-- Konsole -->
	<appender name="Stdout" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p [%d{ISO8601}] %-26.26c{1} - %m\n" />
		</layout>
	</appender>

	<logger name="org.lla_private.rest"> <!-- Der Name muss exact passen! -->
		<level value="INFO" />
<!--		<appender-ref ref="Stdout" /> Hier nur zusÃ¤tzliche appender eintragen, sonst kommt die Info doppelt -->
	</logger>

	<!-- Alles andere: WARN -->
	<root>
		<level value="WARN" />
		<appender-ref ref="Stdout" />
	</root>
</log4j:configuration>
